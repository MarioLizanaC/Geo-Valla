<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LytContenedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <Space
        android:layout_width="25px"
        android:layout_height="25px" />

    <TextView android:id="@+id/textCentro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cambiar centro:"
        android:textColor="#00000000"
        android:textSize="20dp"
        android:enabled="false" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />

    <EditText android:id="@+id/editLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00000000"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:hint="Introduzca latitud" />

    <EditText android:id="@+id/editLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00000000"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:hint="Introduzca longitud" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button android:id="@+id/BtnCambiarPosition"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Manual" />

        <Button android:id="@+id/BtnObtenerPosition"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Mediante GPS" />

    </LinearLayout>

</LinearLayout>